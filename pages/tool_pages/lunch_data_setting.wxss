  display: flex;
  flex-direction: column; }
  .data-list-box .data-item {
    margin-top: 18rpx;
    display: flex;
    flex-direction: column;
    width: 100%; }
    .data-list-box .data-item .title {
      font-size: 32rpx;
      font-weight: bold;
      width: 100%;
      margin-bottom: 18rpx; }
    .data-list-box .data-item .sub-box {
      width: 100%;
      padding: 18rpx 18rpx 0 18rpx;
