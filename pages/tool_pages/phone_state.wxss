page {
  width: 100%;
  height: auto;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  background: black;
}

.line-1 {
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
}
.line-1 .hori-box {
  width: 300rpx;
  display: flex;
  flex-direction: column;
}
.line-1 .hori-box .graph-box {
  width: 100%;
  height: 300rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 6rpx solid #63eeff;
  position: relative;
}
.line-1 .hori-box .graph-box .hori-line, .line-1 .hori-box .graph-box .vert-line {
  position: absolute;
  width: 100%;
  height: 2rpx;
  top: 50%;
  left: 0;
  background: #c7fcff;
  opacity: 0.5;
}
.line-1 .hori-box .graph-box .vert-line {
  width: 2rpx;
  height: 100%;
  top: 0;
  left: 50%;
}
.line-1 .hori-box .graph-box .point {
  width: 22rpx;
  height: 22rpx;
  background: red;
  position: absolute;
  left: 134rpx;
  top: 134rpx;
}
.line-1 .hori-box .text-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.line-1 .hori-box .text-box .text {
  line-height: 60rpx;
  font-size: 48rpx;
  color: white;
}
.line-1 .hori-box-2 {
  width: 300rpx;
  height: 300rpx;
  border: 1rpx white solid;
}

.compass-box {
  margin-top: 50rpx;
  width: 600rpx;
  height: 600rpx;
  border: 1rpx white solid;
}
